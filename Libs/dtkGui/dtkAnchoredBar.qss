dtkAnchoredBar {
  background: qlineargradient(x1:0, y1:0, x2:0, y2:1, stop:0 #ffffff, stop 0.4 #f5f5f5, stop: 0.5 #ebebeb stop:1 #ebebeb);
  border-top: 1px solid #d4d4d4;
  border-right: 1px solid #d4d4d4;
  background-image: url(:dtkGui/pixmaps/dtk-anchored-bar-handle.png);
  background-position: right;
  background-repeat: none;
}

dtkAnchoredBar::separator {
  background: #d4d4d4;
  width: 1px;
}

dtkWidgetsOverlayPaneItemHeader
{

}

dtkWidgetsOverlayPaneItemFooter QLabel
{
    color: @fg;
}

/* // ///////////////////////////////////////////////////////////////////////////// */
/* //  dtkWidgetsWorkspaceBar framework                                             */
